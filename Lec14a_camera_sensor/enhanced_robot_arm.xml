<mujoco>
	<worldbody>
		<!-- Lighting -->
		<light diffuse=".8 .8 .8" pos="0 0 3" dir="0 0 -1"/>
		<light diffuse=".3 .3 .3" pos="2 0 2" dir="-1 0 -1"/>
		<light diffuse=".4 .4 .4" pos="-2 0 2" dir="1 0 -1"/>
		
		<!-- Ground plane -->
		<geom type="plane" size="3 3 0.1" rgba="0.68 0.85 0.90 1"/>
		
		<!-- Robotic Arm -->
		<body name="base" pos="0 0 0.1">
			<joint type="free"/>
			<geom type="cylinder" size="0.1 0.05" rgba="0.3 0.3 0.3 1"/>
			
			<!-- First arm segment -->
			<body name="arm1" pos="0 0 0.1">
				<joint name="joint1" type="hinge" axis="0 0 1" pos="0 0 0" range="-180 180"/>
				<geom type="cylinder" size="0.05 0.2" rgba="0.7 0.7 0.7 1"/>
				
				<!-- Second arm segment -->
				<body name="arm2" pos="0 0 0.4">
					<joint name="joint2" type="hinge" axis="0 0 1" pos="0 0 0" range="-180 180"/>
					<geom type="cylinder" size="0.04 0.15" rgba="0.6 0.6 0.6 1"/>
					
					<!-- Third arm segment -->
					<body name="arm3" pos="0 0 0.3">
						<joint name="joint3" type="hinge" axis="0 0 1" pos="0 0 0" range="-180 180"/>
						<geom type="cylinder" size="0.03 0.1" rgba="0.5 0.5 0.5 1"/>
						
						<!-- End effector -->
						<body name="gripper" pos="0 0 0.2">
							<joint name="joint4" type="hinge" axis="0 0 1" pos="0 0 0" range="-90 90"/>
							<geom type="box" size="0.02 0.02 0.05" rgba="0.2 0.2 0.2 1"/>
						</body>
					</body>
				</body>
			</body>
		</body>
		
		<!-- Objects to interact with -->
		<!-- Red cube -->
		<body name="red_cube" pos="0.8 0.3 0.15">
			<joint type="free"/>
			<geom type="box" size="0.08 0.08 0.08" rgba="0.9 0.2 0.2 1"/>
		</body>
		
		<!-- Blue sphere -->
		<body name="blue_sphere" pos="0.6 -0.4 0.1">
			<joint type="free"/>
			<geom type="sphere" size="0.08" rgba="0.2 0.2 0.9 1"/>
		</body>
		
		<!-- Green cylinder -->
		<body name="green_cylinder" pos="0.4 0.6 0.15">
			<joint type="free"/>
			<geom type="cylinder" size="0.06 0.12" rgba="0.2 0.9 0.2 1"/>
		</body>
		
		<!-- Yellow pyramid -->
		<body name="yellow_pyramid" pos="-0.5 0.5 0.1">
			<joint type="free"/>
			<geom type="box" size="0.1 0.1 0.1" rgba="0.9 0.9 0.2 1"/>
		</body>
		
		<!-- Purple torus -->
		<body name="purple_torus" pos="-0.3 -0.6 0.1">
			<joint type="free"/>
			<geom type="cylinder" size="0.08 0.04" rgba="0.8 0.2 0.8 1"/>
		</body>
		
		<!-- Target zone -->
		<body name="target_zone" pos="0.8 -0.3 0.05">
			<joint type="free"/>
			<geom type="cylinder" size="0.15 0.02" rgba="0.9 0.9 0.9 0.3"/>
		</body>
		
		<!-- Cameras -->
		<!-- Main camera - positioned to see the arm and objects -->
		<camera name="robot_camera" pos="1.5 0 1.2" euler="0 -30 0"/>
		
		<!-- Side camera for different perspective -->
		<camera name="side_camera" pos="0 1.5 1.0" euler="0 -30 90"/>
		
		<!-- Top-down camera -->
		<camera name="scene_camera" pos="0 0 2.5" euler="0 0 0"/>
		
		<!-- Close-up camera -->
		<camera name="close_camera" pos="0.8 0 0.8" euler="0 -45 0"/>
	</worldbody>
	
	<!-- Actuators for the arm -->
	<actuator>
		<position name="actuator1" joint="joint1" kp="100"/>
		<position name="actuator2" joint="joint2" kp="100"/>
		<position name="actuator3" joint="joint3" kp="100"/>
		<position name="actuator4" joint="joint4" kp="100"/>
	</actuator>
	
	<!-- Contact pairs for object interactions -->
	<contact>
		<exclude body1="base" body2="arm1"/>
		<exclude body1="arm1" body2="arm2"/>
		<exclude body1="arm2" body2="arm3"/>
		<exclude body1="arm3" body2="gripper"/>
	</contact>
</mujoco> 